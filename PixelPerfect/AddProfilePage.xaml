<Page x:Class="PixelPerfect.AddProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PixelPerfect"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProfilePage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Создать новую конфигурацию" HorizontalAlignment="Center" VerticalAlignment="Top" Style="{DynamicResource CustomLabel}" Margin="0,0,0,20" FontFamily="Source Sans Pro Semibold" FontSize="20" Foreground="#FF222222"/>
            <Label Content="Название" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{DynamicResource CustomLabel}" FontSize="15" Foreground="#FF444444"/>
            <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Width="350" Style="{DynamicResource MinecraftTextBox}" VerticalContentAlignment="Center" FontSize="13" Margin="0,8,0,0"/>
            <Button Content="СОХРАНИТЬ" Margin="0,33,0,0" FontSize="14" Style="{DynamicResource MCButton}" Width="160" Height="37" Foreground="White"/>
        </StackPanel>

    </Grid>
</Page>
